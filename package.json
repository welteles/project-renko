  "author": "Wellington Rocha",
  "license": "ISC",
  "dependencies": {
    "bignumber.js": "^9.0.0",
    "rimraf": "^3.0.0",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.24",
    "@types/node": "^12.11.2",
    "jest": "^25.2.1",
    "jest-cli": "^25.2.1",
    "prettier": "^2.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0"
  }
}
