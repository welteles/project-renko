{
  "name": "renko",
  "version": "1.0.0",
  "description": "OHVCL Renko",
  "main": "dist/lib/Renko",
  "scripts": {
    "clean": "rimraf dist && rimraf coverage && rimraf .nyc_output && rimraf dist_test",
